{
  "openapi": "3.0.0",
  "info": {
    "title": "Multi Path Parameters Test",
    "version": "1.0.0"
  },
  "paths": {
    "/api/orders/{orderId}/items/{itemId}": {
      "get": {
        "operationId": "ordercontroller_getorderitem",
        "summary": "获取订单项详情",
        "parameters": [
          {
            "name": "orderId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "订单ID"
          },
          {
            "name": "itemId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "订单项ID"
          }
        ],
        "responses": {
          "200": {
            "description": "成功获取订单项详情"
          }
        }
      },
      "put": {
        "operationId": "ordercontroller_updateorderitem",
        "summary": "更新订单项",
        "parameters": [
          {
            "name": "orderId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "订单ID"
          },
          {
            "name": "itemId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "订单项ID"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "quantity": {
                    "type": "number",
                    "description": "商品数量"
                  },
                  "price": {
                    "type": "number",
                    "description": "商品价格"
                  }
                },
                "required": ["quantity", "price"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "更新成功"
          }
        }
      }
    },
    "/api/users/{userId}/posts/{postId}/comments/{commentId}": {
      "delete": {
        "operationId": "usercontroller_deletecomment",
        "summary": "删除评论",
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "用户ID"
          },
          {
            "name": "postId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "帖子ID"
          },
          {
            "name": "commentId",
            "in": "path", 
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "评论ID"
          }
        ],
        "responses": {
          "200": {
            "description": "删除成功"
          }
        }
      }
    }
  }
}
